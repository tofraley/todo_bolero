@page "/"
@namespace todo_bolero.Server
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HostModel
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Bolero Application</title>
    <base href="/">
    <link rel="stylesheet" href="css/index.css">
  </head>
  <body>
    <div id="main">@(await Html.RenderComponentAsync<todo_bolero.Client.Main.MyApp>(Model.IsServer ? RenderMode.ServerPrerendered : RenderMode.Static))</div>
    <script src="_framework/blazor.@(Model.IsServer ? "server" : "webassembly").js"></script>
  </body>
</html>
